{
  "name": "finovai",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "worker:dev": "wrangler dev",
    "worker:deploy": "wrangler deploy",
    "db:create": "wrangler d1 create finovai-db",
    "db:migrate": "wrangler d1 execute finovai-db --file=./worker/schema.sql",
    "db:migrate:local": "wrangler d1 execute finovai-db --file=./worker/schema.sql --local",
    "dev:full": "bun run build && bun run worker:dev"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260109.0",
    "@types/bun": "latest",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "wrangler": "^4.58.0"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.4",
    "@tailwindcss/vite": "^4.1.18",
    "@vitejs/plugin-react": "^5.1.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.562.0",
    "motion": "^12.26.2",
    "react": "^19.2.3",
    "react-device-mockup": "^1.0.0",
    "react-dom": "^19.2.3",
    "react-use-measure": "^2.1.7",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "vite": "^7.3.1"
  }
}
